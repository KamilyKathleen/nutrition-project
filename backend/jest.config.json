{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "roots": ["<rootDir>/tests"],
  "testMatch": [
    "**/tests/**/*.test.ts"
  ],
  "transform": {
    "^.+\\.ts$": ["ts-jest", {
      "tsconfig": "tsconfig.json"
    }]
  },
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/**/*.d.ts",
    "!src/**/*.test.ts",
    "!src/**/*.spec.ts"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": ["text", "lcov", "html"],
  "testTimeout": 30000,
  "verbose": true
}