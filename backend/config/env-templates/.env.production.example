# üîê CONFIGURA√á√ïES DE PRODU√á√ÉO
# Copie este arquivo para .env.production e ajuste os valores

# =================================
# üè∑Ô∏è  AMBIENTE
# =================================
NODE_ENV=production

# =================================
# üîê SEGURAN√áA CR√çTICA
# =================================
# ‚ö†Ô∏è  GERE UMA CHAVE √öNICA DE 64+ CARACTERES
JWT_SECRET=SUBSTITUA_POR_UMA_CHAVE_SUPER_SECRETA_DE_PELO_MENOS_64_CARACTERES_AQUI
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# =================================
# üåê SERVIDOR
# =================================
PORT=3000
HOST=0.0.0.0
API_URL=https://sua-api-nutrition.herokuapp.com
FRONTEND_URL=https://seu-nutrition-app.vercel.app

# =================================
# üìä BANCO DE DADOS - MONGODB
# =================================
# MongoDB Atlas (Recomendado)
MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/nutrition_prod?retryWrites=true&w=majority
MONGODB_DB_NAME=nutrition_production

# Configura√ß√µes de conex√£o
MONGODB_CONNECTION_POOL_SIZE=10
MONGODB_MAX_IDLE_TIME=30000
MONGODB_SERVER_SELECTION_TIMEOUT=5000

# =================================
# üî¥ CACHE - REDIS
# =================================
# Redis Cloud / Railway Redis
REDIS_URL=redis://default:password@redis-host:port
REDIS_PASSWORD=sua_senha_redis
REDIS_TTL=3600

# =================================
# üìß SERVI√áO DE EMAIL
# =================================
# SendGrid (Recomendado)
EMAIL_SERVICE=sendgrid
EMAIL_API_KEY=SG.sua_chave_sendgrid_aqui
EMAIL_FROM=noreply@seudominio.com
EMAIL_FROM_NAME=Sistema de Nutri√ß√£o

# Alternativa: Gmail
# EMAIL_SERVICE=gmail
# EMAIL_USER=seu-email@gmail.com
# EMAIL_PASSWORD=sua_senha_app

# =================================
# üìà MONITORAMENTO & LOGS
# =================================
# Sentry para tracking de erros
SENTRY_DSN=https://sua-chave-sentry@sentry.io/projeto

# N√≠veis de log
LOG_LEVEL=warn
ENABLE_MORGAN_LOGGING=false

# =================================
# üîí SEGURAN√áA
# =================================
# CORS
CORS_ORIGINS=https://seu-nutrition-app.vercel.app,https://www.seu-nutrition-app.vercel.app

# Rate Limiting
ENABLE_RATE_LIMITING=true
MAX_REQUESTS_PER_HOUR=1000
MAX_REQUESTS_PER_MINUTE=100

# Helmet Security
ENABLE_HELMET=true
ENABLE_HSTS=true

# =================================
# ‚ö° PERFORMANCE
# =================================
ENABLE_COMPRESSION=true
ENABLE_ETAG=true

# Timeouts
REQUEST_TIMEOUT=30000
DATABASE_TIMEOUT=10000

# =================================
# üîÑ BACKUP & RECOVERY
# =================================
ENABLE_AUTO_BACKUP=true
BACKUP_SCHEDULE=0 2 * * *  # Todo dia √†s 2h
BACKUP_RETENTION_DAYS=7

# =================================
# üéØ FEATURE FLAGS
# =================================
ENABLE_METRICS_COLLECTION=true
ENABLE_AUDIT_LOGS=true
ENABLE_NOTIFICATIONS=true
ENABLE_EXCEL_EXPORT=true

